<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/style2.css" />
    <title>Add Vehicle</title>
  </head>
  <body>
    <!-- Navbar (optional) -->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <a class="navbar-brand" href="/adminmain">Add Vehicle - The Car Zone</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/adminmain">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/adminvehicle">View Vehicles</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/vehicles/addvehicle">Add Vehicle</a>
          </li>
           <li class="nav-item">
            <a class="nav-link" href="/adminbookings">Manage Bookings</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container mt-4">
      <div class="card col-6 mx-auto">
        <div class="card-header">
          <h2 class="text-center">Add a New Vehicle</h2>
        </div>
        <div class="card-body">
          <form
            action="/vehicles/addvehicle"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="brand">Brand</label>
              <input
                type="text"
                class="form-control"
                id="brand"
                name="brand"
                required
              />
            </div>

            <div class="form-group">
              <label for="model">Model</label>
              <input
                type="text"
                class="form-control"
                id="model"
                name="model"
                required
              />
            </div>

            <div class="form-group">
              <label for="year">Year</label>
              <input
                type="number"
                class="form-control"
                id="year"
                name="year"
                required
              />
            </div>

            <div class="form-group">
              <label for="price_per_day">Price Per Day ($)</label>
              <input
                type="number"
                step="0.01"
                class="form-control"
                id="price_per_day"
                name="price_per_day"
                required
              />
            </div>
            <div class="form-group">
              <label for="availability">Availability</label>
              <select class="form-control" id="availability" name="availability" required>
                <option value="true">Available</option>
                <option value="false">Unavailable</option>
              </select>
            </div>
            <div class="form-group">
              <label for="image">Vehicle Image</label>
              <input
                type="file"
                class="form-control-file"
                id="image"
                name="image"
                accept="image/*"
              />
            </div>

            <button type="submit" class="btn btn-yellow btn-block">
              Add Vehicle
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
