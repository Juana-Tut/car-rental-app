<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/style2.css" />
  <title>Manage Users - Admin Dashboard</title>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="/adminmain">Admin Dashboard - The Car Zone</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a class="nav-link" href="/adminmain">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/adminvehicle">View Vehicles</a></li>
        <li class="nav-item"><a class="nav-link" href="/vehicles/addvehicle">Add Vehicle</a></li>
        <li class="nav-item"><a class="nav-link" href="/adminbookings">Manage Bookings</a></li>
        <li class="nav-item active"><a class="nav-link" href="/admin/users">Manage Users</a></li>
        <li class="nav-item"><a class="nav-link" href="/api/auth/logout" class="logout-btn">Logout</a></li>
      </ul>
    </div>
  </nav>

  <!-- Content -->
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Manage Users</h1>
      <a href="/adminmain" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <% if (users && users.length > 0) { %>
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Registered Customers</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="thead-dark">
                <tr>
                  <th>ID</th>
                  <th>Firstname</th>
                  <th>Lastname</th>
                  <th>Email</th>
                  <th>Registration Date</th>
                  <th>Total Bookings</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(user => { %>
                  <tr>
                    <td>ag-bz-<%= user.id %></td>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.email %></td>
                    <td><%= new Date(user.created_at).toLocaleDateString() %></td>
                    <td>
                      <span class="badge badge-primary"><%= user.booking_count %></span>
                    </td>
                    <td>
                      <a href="/admin/users/<%= user.id %>" class="btn btn-sm btn-yellow">
                        View Details
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="alert alert-info text-center">
        <h4>No Users Found</h4>
        <p>There are no registered customers in the system yet.</p>
      </div>
    <% } %>
  </div>

  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>