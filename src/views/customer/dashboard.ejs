<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/style2.css" />
    <title>Customer Dashboard</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <a class="navbar-brand" href="/dashboard">Customer Dashboard - The Car Zone</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active"><a class="nav-link" href="/dashboard">Home</a></li>
          <li class="nav-item">
            <a class="nav-link" href="/vehicles">View Vehicles</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/bookings">Manage Bookings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/auth/logout" class="logout-btn">Logout</a>
          </li>
         
        </ul>
      </div>
    </nav>

    <!-- Content -->
    <div class="container mt-5">
      <h1 class="mb-4 text-center">Welcome <%= user.first_name %> <%= user.last_name %></h1>

      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="card p-3">
            <h5>My Bookings</h5>
            <p>View your current and past bookings</p>
            <a href="/bookings" class="btn btn-yellow">Manage Bookings</a>
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <div class="card p-3">
            <h5>Vehicles</h5>
            <p>Browse and Book vehicles.</p>
            <a href="/vehicles" class="btn btn-yellow">Browse Vehicles</a>
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <div class="card p-3">
            <h5>My Profile</h5>
            <p>Update your account information.</p>
            <a href="/dashboard/profile" class="btn btn-yellow">Manage Profile</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
